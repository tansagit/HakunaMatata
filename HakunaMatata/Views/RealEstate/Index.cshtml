@model CustomPagination;
<!-- breadcrumb area start -->
<div class="breadcrumb-area jarallax" style="background-image:url(../assets/img/bg/4.png);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <h1 class="page-title">Property</h1>
                    <ul class="page-list">
                        <li><a href="index-2.html">Home</a></li>
                        <li>Property</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area End -->
<!-- property-area start -->
<div class="property-area pd-top-20">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Filter</h2>
            </div>

            <div class="col-lg-12 mb-5">
                <form asp-controller="RealEstate" asp-action="Index" method="get">
                    <div class="text-center row">
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="rld-single-select">
                                <div class="text-left mb-1">Loại phòng</div>
                                <select asp-for="Type" class="select single-select" asp-items="ViewBag.Types">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="rld-single-select">
                                <div class="text-left mb-1">Thành phố</div>
                                <select asp-for="City" class="select single-select" asp-items="ViewBag.Cities">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="rld-single-select">
                                <div class="text-left mb-1">Quận, huyện</div>
                                <select asp-for="District" class="select single-select" asp-items="ViewBag.Districts">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="rld-single-select">
                                <div class="text-left mb-1">Mức giá</div>
                                <select asp-for="PriceRange" class="select single-select" asp-items="ViewBag.PriceRanges">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="rld-single-select">
                                <div class="text-left mb-1">Diện tích</div>
                                <select asp-for="AcreageRange" class="select single-select" asp-items="ViewBag.AcreagaRanges">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-6 col-md-6 d-flex justify-content-end align-items-end">
                            <button class="btn btn-yellow w-100" type="submit">Lọc tin</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>

        <!--Property filter Start-->
        <div class="property-filter-area row custom-gutter">
            <!-- <div class="gallery-sizer col-1" style="color: red;">aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</div> -->
            <!--property item Start-->
            @if (Model.Results == null || Model.Results.ToList().Count == 0)
            {
                <div class="text-info text-center">Không tìm thấy kết quả phù hợp</div>
            }
            else
            {
                @foreach (var item in Model.Results)
                {
                    <div class="rld-filter-item col-lg-4 col-sm-6">
                        <div class="single-feature">
                            <div class="thumb">
                                @if (item.ImageUrl == "404")
                                {
                                    <img src="~/assets/img/notfound.jpg" class="w-100 h-100"
                                         alt="img">
                                }

                                else
                                {
                                    <img src="@item.ImageUrl" class="w-100 h-100"
                                         alt="img">
                                }

                            </div>
                            <div class="details">
                                <a href="#" class="feature-logo">
                                    <img src="~/assets/img/icons/l3.png" alt="icons">
                                </a>
                                <p class="author"><i class="fa fa-user"></i> @item.AgentName</p>
                                <h6 class="title"><a href="#">@item.Street</a></h6>
                                <h6 class="price">@item.Price VNĐ/tháng</h6>
                                <ul class="info-list">
                                    <li><i class="fa fa-times"></i>@item.PostTime</li>

                                    <li><img src="~/assets/img/icons/7.png" alt="img">@item.Acreage m2</li>
                                </ul>
                                <ul class="contact-list">
                                    <li><a class="phone" href="#"><i class="fa fa-phone"></i></a></li>
                                    <li><a class="message" href="#"><img src="~/assets/img/icons/8.png" alt="img"></a></li>
                                    <li><a class="btn btn-yellow" href="#">View Details</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
        <div class="row">
            <div class="col-lg-12 mt20 d-flex justify-content-center">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a class="page-link "
                           asp-action="Index"
                           asp-route-type="@Model.Type"
                           asp-route-city="@Model.City"
                           asp-route-district="@Model.District"
                           asp-route-priceRange="@Model.PriceRange"
                           asp-route-acreageRange="@Model.AcreageRange"
                           asp-route-search="@Model.SearchString"
                           asp-route-page="@(Model.PageIndex - 1)"> <i class="fas fa-arrow-left"></i></a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a asp-action="Index"
                               asp-route-type="@Model.Type"
                               asp-route-city="@Model.City"
                               asp-route-district="@Model.District"
                               asp-route-priceRange="@Model.PriceRange"
                               asp-route-acreageRange="@Model.AcreageRange"
                               asp-route-search="@Model.SearchString"
                               asp-route-page="@i"
                               class="page-link">@i</a>
                        </li>
                    }

                    <li class="page-item @nextDisabled">
                        <a class="page-link "
                           asp-action="Index"
                           asp-route-type="@Model.Type"
                           asp-route-city="@Model.City"
                           asp-route-district="@Model.District"
                           asp-route-priceRange="@Model.PriceRange"
                           asp-route-acreageRange="@Model.AcreageRange"
                           asp-route-search="@Model.SearchString"
                           asp-route-page="@(Model.PageIndex + 1)"><i class="fas fa-arrow-right"></i></a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>
<!-- property area end -->
